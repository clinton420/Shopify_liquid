{{ 'section-benefits-bar.css' | asset_url | stylesheet_tag }}

<div class="benefits-bar color-{{ section.settings.color_scheme }} gradient section-padding">
  <div class="page-width">
    <div class="benefits-grid">
      {% for block in section.blocks %}
        <div class="benefit-item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="benefit-icon">
              {{ block.settings.icon }}
            </div>
          {% endif %}
          <div class="benefit-content">
            <h3 class="benefit-title">{{ block.settings.title | escape }}</h3>
            <p class="benefit-description">{{ block.settings.description | escape }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

