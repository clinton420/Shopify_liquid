{% paginate blog.articles by 12 %}
  <div class="blog-page section-padding">
    <div class="page-width">
      
      <div class="blog-header text-center">
        <h1 class="blog-title">{{ blog.title }}</h1>
        {% if blog.summary != blank %}
          <div class="blog-summary">{{ blog.summary }}</div>
        {% endif %}
      </div>

      <div class="articles-grid grid grid--3-col">
        {% for article in blog.articles %}
          <article class="article-card card">
            {% if article.image %}
              <div class="article-image">
                <a href="{{ article.url }}">
                  <img 
                    src="{{ article.image | image_url: width: 400 }}"
                    srcset="{{ article.image | image_url: width: 200 }} 200w,
                            {{ article.image | image_url: width: 400 }} 400w"
                    sizes="(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw"
                    alt="{{ article.image.alt | escape }}"
                    loading="lazy"
                    width="{{ article.image.width }}"
                    height="{{ article.image.height }}"
                  >
                </a>
              </div>
            {% endif %}
            
            <div class="article-content">
              <div class="article-meta">
                <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                  {{ article.published_at | date: '%B %d, %Y' }}
                </time>
                <span class="article-author">{{ article.author }}</span>
              </div>
              
              <h2 class="article-title">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h2>
              
              {% if article.excerpt != blank %}
                <div class="article-excerpt">
                  {{ article.excerpt }}
                </div>
              {% endif %}
              
              <a href="{{ article.url }}" class="article-read-more button button--secondary">
                Read More
              </a>
            </div>
          </article>
        {% endfor %}
      </div>

      {% render 'pagination', paginate: paginate %}
    </div>
  </div>
{% endpaginate %}