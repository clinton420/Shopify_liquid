  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading font",
        "info": "Inter is recommended for this theme"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4", 
        "label": "Body font",
        "info": "Inter is recommended for this theme"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 100
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "unit": "px",
        "label": "Page width",
        "default": 1200
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Spacing between sections",
        "default": 80
      },
      {
        "type": "range",
        "id": "spacing_grid_horizontal",
        "min": 4,
        "max": 40,
        "step": 4,
        "unit": "px",
        "label": "Grid horizontal spacing",
        "default": 30
      },
      {
        "type": "range",
        "id": "spacing_grid_vertical",
        "min": 4,
        "max": 40,
        "step": 4,
        "unit": "px",
        "label": "Grid vertical spacing",
        "default": 30
      }
    ]
  },
  {
    "name": "Cards",
    "settings": [
      {
        "type": "select",
        "id": "card_color_scheme",
        "options": [
          {
            "value": "background-1",
            "label": "Background 1"
          },
          {
            "value": "background-2", 
            "label": "Background 2"
          },
          {
            "value": "primary",
            "label": "Primary"
          }
